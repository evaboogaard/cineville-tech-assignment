<header class="site-head | bg-shadow text-orange font-serif text-step-0" style="padding-block: 2rem;">
  <div class="wrapper">
    <nav aria-label="Main">
      <ul class="cluster" role="list">
        {% for item in navigation.items %}
          <li>
            <a class="link" href="{{ item.url }}" {{ helpers.getLinkActiveState(item.url, page.url) | safe }}>
              {{ item.text }}
            </a>
          </li>
        {% endfor %}
      </ul>
    </nav>
  </div>
</header>